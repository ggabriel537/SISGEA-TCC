<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="BancoDados" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>com.sisgea.Entidades.Administrador</class>
        <class>com.sisgea.Entidades.Aeronave</class>
        <class>com.sisgea.Entidades.Agendamento</class>
        <class>com.sisgea.Entidades.Aluno</class>
        <class>com.sisgea.Entidades.DiarioBordo</class>
        <class>com.sisgea.Entidades.Discrepancia</class>
        <class>com.sisgea.Entidades.Endereco</class>
        <class>com.sisgea.Entidades.Instrutor</class>
        <class>com.sisgea.Entidades.Manutencao</class>
        <class>com.sisgea.Entidades.Usuario</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/postgres"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="sisgea123"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
